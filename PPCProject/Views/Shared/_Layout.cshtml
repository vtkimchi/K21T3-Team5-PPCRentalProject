                    <span class="icon-bar"></span>
                </button>*@
            </div>
            <div class="navbar-right" style="font-size:medium;padding-top:10px">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("PROPERTY", "Index", "Home")</li>
                    <li>@Html.ActionLink("SEARCH", "About", "Home")</li>
                    <li>@Html.ActionLink("ABOUT US", "Contact", "Home")</li>
                    <li>@Html.ActionLink("POST", "Index", "Agency")</li>
                  
                    <li><a href="~/Admin/ProductAdmin/Index">ADMIN</a></li>
                    @*//Login*@
                   @if (Session["UserID"] == null)
                   { 
                    <li>@Html.ActionLink("LOGIN", "Login", "Agency")</li>
                   }
                   else
                   {
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            <span class="profile-ava">
                                <img alt="" src="img/avatar1_small.jpg">
                            </span>
                            <span class="username">@Session["FullName"]</span>
                            <b class="caret"></b>
