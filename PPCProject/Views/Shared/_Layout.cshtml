                                </li>
                                <li>
                                    <a href="@Url.Action("Create","Agency")"> Add New Property</a>
                                </li>*@
                            <li>
                                <a href="/Agency/Logout">Logout</a>
                            </li>
                            
                        </ul>
                    </li>
                   }
                </ul>
            </div>
            <div class="backgrounheader">
                <a href="@Url.Action("Index","Home")"><img src="~/Images/logoPPC.png" width="200px" height="70px" alt="Logo"></a>
            </div>

        </div>
    </div>
    <div>
        @RenderBody()
        <hr class="container body-content"/>
        <footer class="container body-content">
            <p>&copy; @DateTime.Now.Year - PPC Rental Project -K21T3- Team 05</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
