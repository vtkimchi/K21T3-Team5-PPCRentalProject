@model IEnumerable<PPCProject.Model.PROPERTY>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Danh sách dự án</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@

<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Data Table Example
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Property Name</th>
                        <th>Image</th>
                        <th>Content</th>
                        <th>Price</th>
                        <th>Unit Price</th>
                        <th>Area</th>
                        <th>BedRoom</th>
                        <th>BathRoom</th>
                        <th>Created at</th>
                        <th>Created post</th>
                        <th>Updated at</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Property Name</th>
                        <th>Image</th>
                        <th>Content</th>
                        <th>Price</th>
                        <th>Unit Price</th>
                        <th>Area</th>
                        <th>BedRoom</th>
                        <th>BathRoom</th>
                        <th>Created at</th>
                        <th>Created post</th>
                        <th>Updated at</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PropertyName)
                            </td>
                            <td>
                                <img src="/Images/@item.Avatar" width="100px" />
                            </td>
                            <td>
                                <p>@item.Content.Substring(0, 20)...</p>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UnitPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Area)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BedRoom)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BathRoom)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Created_at)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Create_post)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Updated_at)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>
        
